<h2>Info about website</h2>
<hr />
<h4 class="mb-4">Important Number</h4>
<table class="table table-striped table-dark text-center ">
  <thead>
    <tr>
      <th scope="col">#Info Number</th>
      <th scope="col">Description</th>
      <th scope="col">Number</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">Product Number</th>
      <td>Number of all product in this Ecommerce </td>
      <td>@Model.productNumber</td>
    </tr>
    <tr>
      <th scope="row">Category Number</th>
      <td>Number of all Category in this Ecommerce</td>
      <td>@Model.categoryNumber</td>
    </tr>
    <tr>
      <th scope="row">User Number</th>
      <td>Number of all User in this Ecommerce</td>
      <td>@Model.UserNumber</td>
    </tr>
    <tr>
      <th scope="row">Reseller Number</th>
      <td>Number of all reseller in this Ecommerce</td>
      <td>@Model.resellerNumber</td>
    </tr>
       <tr>
      <th scope="row">Admin Number</th>
      <td>Number of all admin in this Ecommerce</td>
      <td>@Model.AdminNumber</td>
    </tr>
  </tbody>
</table>
<hr />
<h4 class="mb-4">Important Number</h4>
<table class="table table-striped table-dark text-center ">
  <thead>
    <tr>
      <th scope="col">Category Number</th>
      <th scope="col">Category Name</th>
      <th scope="col">Number of product in this category </th>
    </tr>
  </thead>
  <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in @Model.prCategories)
        {
            <tr>
                <th scope="row">@{i++;} @i</th>
      <td>@item.Key </td>
      <td>@item.Value</td>
    </tr> 
     }
    
  
  </tbody>
</table>
